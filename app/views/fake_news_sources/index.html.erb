<p id="notice"><%= notice %></p>

<h1>Fake News Sources</h1>

<table class="table">
  <thead>
    <tr>
      <th>Twitter handle</th>
      <th>Filepath</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fake_news_sources.each do |fake_news_source| %>
      <tr>
        <td><%= fake_news_source.twitter_handle %></td>
        <td><%= fake_news_source.filepath %></td>
        <td><%= link_to 'Show', fake_news_source %></td>
        <td><%= link_to 'Edit', edit_fake_news_source_path(fake_news_source) %></td>
        <td><%= link_to 'Destroy', fake_news_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fake News Source', new_fake_news_source_path %>
