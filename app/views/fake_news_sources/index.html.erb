<div class="jumbotron">
  <h1 class="display-4">Fake News</h1>
  <p class="lead">Generate Fake News with ease!</p>
  <hr class="my-4">
  <p>Just pick a topic, and get started misinforming the masses!</p>
  <p class="lead">
    <%= link_to 'Get Started!', new_fake_news_source_path, class: 'btn btn-primary btn-lg' %>
  </p>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Topic</th>
      <th>Source Articles</th>
      <th>Fake Articles</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @fake_news_sources.each do |fake_news_source| %>
      <tr>
        <td><%= link_to fake_news_source.query, fake_news_source %></td>
        <td><%= fake_news_source.articles_count %></td>
        <td><%= fake_news_source.fake_articles.count %></td>
        <td><%= link_to 'Destroy', fake_news_source, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fake News Source', new_fake_news_source_path, class: 'btn btn-primary' %>
